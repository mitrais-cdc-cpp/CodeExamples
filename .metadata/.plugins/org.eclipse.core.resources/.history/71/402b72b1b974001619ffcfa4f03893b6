#include <iostream>

#include "inc/scenario2/Ovipar.hpp"
#include "inc/scenario2/Ovovivipar.hpp"
#include "inc/scenario2/Vivipar.hpp"

void Scenario2Sample()
{
	namespace mp = Scenario2;

	std::cout<< "Sample of multiple inheritance:" << std::endl << std::endl;

	mp::Ovipar duck("DUCK");

	duck.showName();
	duck.showDescription();
	duck.makeMovement();
	duck.makeSound();
	std::cout<< std::endl;

	mp::Vivipar tiger("TIGER");
	tiger.showName();
	tiger.showDescription();
	tiger.makeMovement();
	tiger.makeSound();
	std::cout<< std::endl;


	//mp::Ovovivipar shark("SHARK");
}

int main()
{
	Scenario2Sample();

	return 0;
}
