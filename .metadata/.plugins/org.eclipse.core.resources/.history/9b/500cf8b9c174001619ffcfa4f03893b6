#include <iostream>

#include "inc/scenario1/individual.hpp"
#include "inc/scenario1/staff.hpp"
#include "inc/scenario1/frontOfficer.hpp"

#include "inc/scenario2/ovipar.hpp"
#include "inc/scenario2/ovovivipar.hpp"
#include "inc/scenario2/vivipar.hpp"

void scenario1Sample()
{
	namespace s1 = scenario1;

	std::cout<< "Sample of multiple inheritance Scenario 1:" << std::endl << std::endl;

	s1::individual bob("i123", "Bob");
	bob.showId();
	bob.showName();
	std::cout<< std::endl;

	s1::staff john("s5", time(0));
	john.showStaffId();
	john.showJoinDate();
	std::cout<< std::endl;

}

void scenario2Sample()
{
	namespace s2 = scenario2;

	std::cout<< "Sample of multiple inheritance Scenario 2:" << std::endl << std::endl;

	s2::ovipar duck("DUCK");
	duck.showName();
	duck.showDescription();
	duck.makeMovement();
	duck.makeSound();
	std::cout<< std::endl;

	s2::vivipar tiger("TIGER");
	tiger.showName();
	tiger.showDescription();
	tiger.makeMovement();
	tiger.makeSound();
	std::cout<< std::endl;

	//s2::Ovovivipar shark("SHARK");
}

int main()
{
	scenario1Sample();
	//scenario2Sample();

	return 0;
}
