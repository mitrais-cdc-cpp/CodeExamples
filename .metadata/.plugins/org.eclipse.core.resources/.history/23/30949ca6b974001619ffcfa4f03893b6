#include "../../inc/Scenario2/Ovipar.hpp"

using namespace Scenario2;

Ovipar::Ovipar(std::string name)
{
	this->name = name;
	this->description = "Oviparous is a kind of zoo producing young by means of eggs";
}

void Ovipar::showName()
{
	std::cout << this->name << std::endl;
}

void Ovipar::showDescription()
{
	std::cout << this->description << std::endl;
}

void Ovipar::makeMovement()
{
	std::cout << "Flying..." << std::endl;
}

void Ovipar::makeSound()
{
	std::cout << "Kwak..kwak.." << std::endl;
}

Ovipar::~Ovipar()
{

}
