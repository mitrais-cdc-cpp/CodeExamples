#ifndef INC_SCENARIO2_VIVIPAR_HPP_
#define INC_SCENARIO2_VIVIPAR_HPP_

#include <iostream>
#include <string>

namespace scenario2
{
	class vivipar
	{
		public:
			vivipar(std::string name);
			virtual ~vivipar();

			virtual void showName();
			virtual void showDescription();
			virtual void makeMovement();
			virtual void makeSound();

		protected:
			std::string name;
			std::string description;
	};
}


#endif /* INC_SCENARIO2_VIVIPAR_HPP_ */
