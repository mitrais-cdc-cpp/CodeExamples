#ifndef INC_SCENARIO2_OVIPAR_HPP_
#define INC_SCENARIO2_OVIPAR_HPP_

#include <iostream>
#include <string>

namespace Scenario2
{
	class Ovipar
	{
		public:
			Ovipar(std::string name);
			virtual ~Ovipar();

			virtual void showName();
			virtual void showDescription();
			virtual void makeMovement();
			virtual void makeSound();

		protected:
			std::string name;
			std::string description;
	};
}


#endif /* INC_SCENARIO2_OVIPAR_HPP_ */
